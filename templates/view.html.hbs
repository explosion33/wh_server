                        <button id="delete" hidden="true" type="button" class="btn btn-danger" onclick="delete_all()">Delete</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-1"></div>
    </div>
    
    <div class="container fixed-bottom text-center" style="margin-bottom: 8%;">
        <div class = "row">
            <div class="col sm-2" style="margin: 24px;"></div>
            <div class="col sm-8">
                <input id="url" type="text" placeholder="https://example.com">
                <button type="button" class="btn btn-primary" onclick="register_hook(document.getElementById('url').value)">Add</button>
            </div>
            <div class="col sm-2" style="margin: 24px;"></div>
        </div>
    </div>

