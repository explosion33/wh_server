    <title id = "title">Webhooks</title>
</head>


<body>
    <div class="row">
        <div class="col-sm-1 text-center" style="margin-top: 16px;">
            <strong id="username">explosion33</strong>
        </div>
        <div class="col-sm-10">
            <div class="container overflow-auto" style="margin-top: 16px; margin-bottom: 16px; max-height: 500px; max-width: 60%;">
                <div class="row" style="margin-bottom: 16px;">
                    <div class="col-sm-6">
                        <strong>webhook url</strong>
                    </div>
                    <div class="col-sm-5">
                        <strong>api endpoint</strong>         
                    </div>
                    <div class="col-sm-1 text-center">
                        <input type="checkbox" id="select_all" onclick="select_all()">
                    </div>
                </div>
                <div id="hooks">

                </div>
            </div>
        </div>
